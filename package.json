{
  "name": "nest-playground",
  "version": "1.0.0",
  "description": "A tiny personal playground to test out the latest and greatest stuff",
  "author": "Lukas Spiss <lukas@spiss.dev>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./test/vitest.e2e.config.ts",
    "typecheck": "tsc --noEmit",
    "migrations:gen": "drizzle-kit generate:pg --config=drizzle.config.ts",
    "migrations:run": "drizzle-kit push:pg --config=drizzle.config.ts"
  },
  "dependencies": {
    "@fastify/static": "^6.11.2",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-fastify": "^10.2.7",
    "@nestjs/swagger": "^7.1.14",
    "drizzle-orm": "^0.28.6",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.0",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/node": "^20.8.9",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitest/coverage-v8": "^0.34.6",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "unplugin-swc": "^1.4.3",
    "vitest": "^0.34.6"
  },
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.1"
  }
}
